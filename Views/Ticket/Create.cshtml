@model DarnTheLuck.ViewModels.CreateTicketViewModel
@section CustomStyle {<link rel="stylesheet" href="~/css/forminput.css" />}

<h1>Tell me about your Motherboard</h1>

<form asp-controller="Ticket" asp-action="Create" method="post">
    <div class="container ticket-round border bg-light b-shadow p-2">
        <div>
            <label>Contact Name</label>
        </div><div>
            <input asp-for="ContactName" type="text" class="input-group-text ticket-round text-left" />
            <span asp-validation-for="ContactName"></span>
        </div>
        <div>
            <label>Contact Email</label>
        </div><div>
            <input asp-for="ContactEmail" type="text" class="input-group ticket-round" />
            <span asp-validation-for="ContactEmail"></span>
        </div>
        <div>
            <label>Contact Phone</label>
        </div><div>
            <input asp-for="ContactPhone" type="text" class="input-group input-group-text ticket-round" />
            <span asp-validation-for="ContactPhone"></span>
        </div>
        <div>
            <label>Ticket Notes</label>
        </div><div>
            <textarea asp-for="TicketNotes" cols="40" rows="5"></textarea>
        </div>
        <div>
            <label>Device Model Number</label>
        </div><div class="u-div">
            <input asp-for="Model" type="text" id="modelInput" />
            <span contenteditable class="t-box" onchange="alert(this.value);"></span> @* onchange not triggering, need to set modelInput somewhere.. can do it on submit as well *@
        </div>
        <div>
            <label>Device Serial Number</label>
        </div><div>
            <input asp-for="Serial" type="text" class="c-inp" />
        </div>
        <div>
            <button>Submit</button>
        </div>
    </div>
</form>
